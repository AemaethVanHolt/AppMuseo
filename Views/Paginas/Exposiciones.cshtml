@{
    ViewData["Title"] = "Exposiciones";
    Layout = "_Layout";
}

<div class="exposiciones">
    <section class="hero-section">
        <div class="container">
            <h1>Exposiciones</h1>
            <p class="lead">Descubre nuestras muestras temporales y colecciones permanentes</p>
        </div>
    </section>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="filtros mb-5">
                    <div class="d-flex justify-content-center flex-wrap gap-3">
                        <button class="btn btn-outline-dark active" data-filter="todas">Todas</button>
                        <button class="btn btn-outline-dark" data-filter="temporal">Temporales</button>
                        <button class="btn btn-outline-dark" data-filter="permanente">Permanentes</button>
                        <button class="btn btn-outline-dark" data-filter="proximas">Próximas</button>
                    </div>
                </div>

                <div class="row row-cols-1 row-cols-lg-2 g-4 mb-5">
                    <!-- Exposición 1 - Próxima -->
                    <div class="col" data-categoria="proximas">
                        <div class="exposicion-card">
                            <div class="exposicion-imagen">
                                <img src="/img/exposiciones/exporenac.jpg" 
                                     alt="Renacimiento Revisitado" class="img-fluid">
                                <div class="exposicion-fecha">15 Sep - 15 Dic 2023</div>
                                <div class="exposicion-categoria">Próxima</div>
                            </div>
                            <div class="exposicion-info">
                                <h3>Renacimiento Revisitado</h3>
                                <p class="exposicion-artista">Obras maestras de la Galería Uffizi</p>
                                <p class="exposicion-descripcion">Una selección excepcional de obras maestras del Renacimiento italiano, incluyendo piezas nunca antes exhibidas fuera de Italia. La exposición incluye estudios técnicos que revelan los secretos de los maestros.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">Planta 1 - Sala Principal</span>
                                    <a href="/Paginas/ReservarEntrada?id=1&titulo=Renacimiento Revisitado&artista=Obras maestras de la Galería Uffizi&fecha=15 Sep - 15 Dic 2023&descripcion=Una selección excepcional de obras maestras del Renacimiento italiano, incluyendo piezas nunca antes exhibidas fuera de Italia. La exposición incluye estudios técnicos que revelan los secretos de los maestros.&ubicacion=Planta 1 - Sala Principal&imagen=/img/exposiciones/exporenac.jpg" class="btn btn-sm btn-primary">Reservar entradas</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Exposición 2 - Próxima -->
                    <div class="col" data-categoria="proximas">
                        <div class="exposicion-card">
                            <div class="exposicion-imagen">
                                <img src="/img/exposiciones/intersecciones.jpg" 
                                     alt="Arte y Tecnología" class="img-fluid">
                                <div class="exposicion-fecha">1 Oct - 30 Nov 2023</div>
                                <div class="exposicion-categoria">Próxima</div>
                            </div>
                            <div class="exposicion-info">
                                <h3>Intersecciones Digitales</h3>
                                <p class="exposicion-artista">Artistas contemporáneos internacionales</p>
                                <p class="exposicion-descripcion">Una inmersión en el arte generativo, realidad virtual e inteligencia artificial. La exposición incluye instalaciones interactivas que desafían los límites entre el arte y la tecnología.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">Planta -1 - Espacio Digital</span>
                                    <a href="/Paginas/ReservarEntrada?id=2&titulo=Intersecciones Digitales&artista=Artistas contemporáneos internacionales&fecha=1 Oct - 30 Nov 2023&descripcion=Una inmersión en el arte generativo, realidad virtual e inteligencia artificial. La exposición incluye instalaciones interactivas que desafían los límites entre el arte y la tecnología.&ubicacion=Planta -1 - Espacio Digital&imagen=/img/exposiciones/intersecciones.jpg" class="btn btn-sm btn-primary">Reservar entradas</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Exposición 3 - Próxima -->
                    <div class="col" data-categoria="proximas">
                        <div class="exposicion-card">
                            <div class="exposicion-imagen">
                                <img src="/img/exposiciones/mujeres.jpg" 
                                     alt="Mujeres Vanguardistas" class="img-fluid">
                                <div class="exposicion-fecha">20 Oct 2023 - 20 Ene 2024</div>
                                <div class="exposicion-categoria">Próxima</div>
                            </div>
                            <div class="exposicion-info">
                                <h3>Mujeres en la Vanguardia</h3>
                                <p class="exposicion-artista">Pioneras del arte moderno</p>
                                <p class="exposicion-descripcion">Una reivindicación de las mujeres artistas que revolucionaron el arte moderno. La exposición incluye obras de Frida Kahlo, Tamara de Lempicka, Georgia O'Keeffe y otras figuras clave.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">Planta 2 - Galería Moderna</span>
                                    <a href="/Paginas/ReservarEntrada?id=3&titulo=Mujeres en la Vanguardia&artista=Pioneras del arte moderno&fecha=20 Oct 2023 - 20 Ene 2024&descripcion=Una reivindicación de las mujeres artistas que revolucionaron el arte moderno. La exposición incluye obras de Frida Kahlo, Tamara de Lempicka, Georgia O'Keeffe y otras figuras clave.&ubicacion=Planta 2 - Galería Moderna&imagen=/img/exposiciones/mujeres.jpg" class="btn btn-sm btn-primary">Reservar entradas</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Exposición 4 - Temporal Actual -->
                    <div class="col" data-categoria="temporal">
                        <div class="exposicion-card">
                            <div class="exposicion-imagen">
                                <img src="/img/exposiciones/impresion.jpg" 
                                     alt="Impresionismo Moderno" class="img-fluid">
                                <div class="exposicion-fecha">Hasta 15 Nov 2023</div>
                                <div class="exposicion-categoria">Temporal</div>
                            </div>
                            <div class="exposicion-info">
                                <h3>Impresionismo: Luz y Movimiento</h3>
                                <p class="exposicion-artista">Monet, Renoir, Degas y más</p>
                                <p class="exposicion-descripcion">Una inmersión en el movimiento impresionista que revolucionó el arte del siglo XIX. La exposición incluye más de 50 obras maestras que capturan la fugacidad de la luz y el movimiento.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">Planta 1 - Galería Impresionista</span>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Visitar exposición</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Exposición 5 - Permanente -->
                    <div class="col" data-categoria="permanente">
                        <div class="exposicion-card">
                            <div class="exposicion-imagen">
                                <img src="/img/exposiciones/grandes-maestros.jpg" 
                                     alt="Arte Clásico" class="img-fluid">
                                <div class="exposicion-categoria">Permanente</div>
                            </div>
                            <div class="exposicion-info">
                                <h3>Grandes Maestros</h3>
                                <p class="exposicion-artista">Del Renacimiento al Romanticismo</p>
                                <p class="exposicion-descripcion">Nuestra colección permanente presenta obras maestras de artistas como Rembrandt, Velázquez, Goya y El Greco, ofreciendo un recorrido por 500 años de historia del arte.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">Plantas 2 y 3</span>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Explorar colección</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Exposición 6 - Próxima -->
                    <div class="col" data-categoria="proximas">
                        <div class="exposicion-card">
                            <div class="exposicion-imagen">
                                <img src="/img/exposiciones/arte-oriental.jpg" 
                                     alt="Arte Oriental" class="img-fluid">
                                <div class="exposicion-fecha">5 Nov 2023 - 28 Feb 2024</div>
                                <div class="exposicion-categoria">Próxima</div>
                            </div>
                            <div class="exposicion-info">
                                <h3>Ecos del Lejano Oriente</h3>
                                <p class="exposicion-artista">Arte milenario de Asia</p>
                                <p class="exposicion-descripcion">Una exposición que abarca 2,000 años de arte chino, japonés y coreano, incluyendo cerámicas, pinturas en seda y esculturas budistas nunca antes exhibidas en Europa.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">Planta 0 - Galería Oriental</span>
                                    <a href="/Paginas/ReservarEntrada?id=6&titulo=Ecos del Lejano Oriente&artista=Arte milenario de Asia&fecha=5 Nov 2023 - 28 Feb 2024&descripcion=Una exposición que abarca 2,000 años de arte chino, japonés y coreano, incluyendo cerámicas, pinturas en seda y esculturas budistas nunca antes exhibidas en Europa.&ubicacion=Planta 0 - Galería Oriental&imagen=/img/exposiciones/arte-oriental.jpg" class="btn btn-sm btn-primary">Reservar entradas</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="info-destacada p-4 rounded mb-5">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3>¿Quieres recibir información sobre nuestras exposiciones?</h3>
                            <p class="mb-0">Suscríbete a nuestro boletín para estar al día de todas las novedades.</p>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <button class="btn btn-primary">Suscribirse</button>
                        </div>
                    </div>
                </div>

                <div class="calendario-exposiciones">
                    <h2 class="text-center mb-4">Calendario de Exposiciones</h2>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Exposición</th>
                                    <th>Fechas</th>
                                    <th>Ubicación</th>
                                    <th>Tipo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Impresionismo Moderno</td>
                                    <td>15 Jun - 15 Nov 2023</td>
                                    <td>Sala de Exposiciones 1</td>
                                    <td><span class="badge bg-warning text-dark">Temporal</span></td>
                                </tr>
                                <tr>
                                    <td>Grandes Maestros</td>
                                    <td>Permanente</td>
                                    <td>Planta 2</td>
                                    <td><span class="badge bg-success">Permanente</span></td>
                                </tr>
                                <tr>
                                    <td>Fronteras Digitales</td>
                                    <td>1 Dic 2023 - 28 Feb 2024</td>
                                    <td>Sala de Nuevas Tecnologías</td>
                                    <td><span class="badge bg-info">Próxima</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="/css/paginas/exposiciones.css">
}

@section Scripts {
    <script>
        // Filtrado de exposiciones
        document.addEventListener('DOMContentLoaded', function() {
            const filtros = document.querySelectorAll('.filtros .btn');
            const exposiciones = document.querySelectorAll('[data-categoria]');
            
            filtros.forEach(filtro => {
                filtro.addEventListener('click', function() {
                    // Remover clase activa de todos los botones
                    filtros.forEach(btn => btn.classList.remove('active'));
                    // Agregar clase activa al botón clickeado
                    this.classList.add('active');
                    
                    const categoria = this.getAttribute('data-filter');
                    
                    exposiciones.forEach(expo => {
                        if (categoria === 'todas' || expo.getAttribute('data-categoria') === categoria) {
                            expo.style.display = 'block';
                        } else {
                            expo.style.display = 'none';
                        }
                    });
                });
            });
        });
    </script>
}
