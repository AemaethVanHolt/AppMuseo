@{
    ViewData["Title"] = "Solicitud de restablecimiento de contraseña";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-black text-white text-center py-4">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope fa-4x text-primary mb-4"></i>
                        <h5>Revisa tu correo electrónico</h5>
                        <p class="text-muted">
                            Hemos enviado un enlace para restablecer tu contraseña a tu dirección de correo electrónico.
                            Por favor, revisa tu bandeja de entrada y sigue las instrucciones.
                        </p>
                    </div>
                    
                    <div class="mt-4">
                        <p class="text-muted mb-3">¿No recibiste el correo electrónico?</p>
                        <a href="#" class="btn btn-outline-primary" id="resendEmail">
                            <i class="fas fa-sync-alt me-2"></i>Reenviar correo
                        </a>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i> Volver al inicio de sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('resendEmail').addEventListener('click', function(e) {
            e.preventDefault();
            // Aquí iría la lógica para reenviar el correo
            alert('Se ha reenviado el correo de restablecimiento de contraseña.');
        });
    </script>
}
