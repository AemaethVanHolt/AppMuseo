@model AppMuseo.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-dark text-center py-3">
                    <h3 class="text-light mb-0">Iniciar Sesión</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Tu contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-check mb-4">
                            <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Iniciar Sesión</button>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-2">
                                <a asp-action="ForgotPassword" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                            </p>
                            <p class="mb-0">
                                ¿No tienes una cuenta? <a asp-action="Register" class="text-decoration-none">Regístrate</a>
                            </p>
                        </div>
                        
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .card {
            border: none;
            overflow: hidden;
        }
        
        .card-header {
            background-color: #000 !important;
            border-bottom: 2px solid #FFD700;
        }
        
        .form-control:focus {
            border-color: #FFD700;
            box-shadow: 0 0 0 0.25rem rgba(255, 215, 0, 0.25);
        }
        
        .btn-primary {
            background-color: #000;
            border-color: #FFD700;
            color: #FFD700;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background-color: #FFD700;
            color: #000;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
        }
        
        a {
            color: #FFD700;
            transition: all 0.2s ease;
        }
        
        a:hover {
            color: #fff;
            text-decoration: none;
        }
        
        .form-check-input:checked {
            background-color: #FFD700;
            border-color: #FFD700;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
