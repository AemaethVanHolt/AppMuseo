@{
    ViewData["Title"] = "Contraseña restablecida";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-success text-white text-center py-4">
                    <h4 class="mb-0"><i class="fas fa-check-circle me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
                        <h5>¡Tu contraseña ha sido restablecida con éxito!</h5>
                        <p class="text-muted mt-3">
                            Ahora puedes iniciar sesión con tu nueva contraseña.
                        </p>
                    </div>
                    
                    <div class="mt-5">
                        <a asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
