@using Microsoft.AspNetCore.Identity
@model IEnumerable<AppMuseo.Models.ApplicationUser>
@{
    ViewData["Title"] = "Usuarios Registrados";
    var allRoles = ViewBag.AllRoles as List<string>;
    var userRoles = ViewBag.UserRoles as Dictionary<string, IList<string>>;
}

<div class="container-fluid p-0">
    <div class="bg-dark bg-opacity-75 text-white p-4">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="m-0">@ViewData["Title"]</h1>
                <div class="d-flex gap-2">
                    <form asp-controller="AdminUtilities" asp-action="ActivarTodosUsuarios" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success rounded-pill">
                            <i class="fas fa-check-circle me-2"></i>Activar Todos
                        </button>
                    </form>
                    <a href="/" class="btn btn-outline-light rounded-pill">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="usersTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Usuario</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                var roles = userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : new List<string>();
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(user.FotoPerfil))
                                            {
                                                <img src="@Url.Content(user.FotoPerfil)" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" alt="Foto de perfil">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-secondary me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                            }
                                            <span>@user.UserName</span>
                                        </div>
                                    </td>
                                    <td>@(user.Nombre + " " + user.Apellidos)</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (roles.Any())
                                        {
                                            <span class="badge bg-primary">@string.Join(", ", roles)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sin rol asignado</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Edit", "Profile", new { id = user.Id })" class="btn-edit">
                                                EDITAR
                                            </a>
                                            <form asp-action="ToggleStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@user.Id" />
                                                @if (user.Activo)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('¿Estás seguro de desactivar este usuario?')">
                                                        <i class="fas fa-user-slash"></i> Desactivar
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-success"
                                                            onclick="return confirm('¿Estás seguro de activar este usuario?')">
                                                        <i class="fas fa-user-check"></i> Activar
                                                    </button>
                                                }
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #191c1f;
            color: #ffffff;
        }
        .card {
            background-color: #191c1f;
            color: #ffffff;
            border: 1px solid #2a2f33;
        }
        .table {
            color: #ffffff !important;
        }
        .table th {
            background-color: #191c1f;
            color: #ffffff !important;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            border-color: #2a2f33 !important;
        }
        .table td {
            color: #ffffff !important;
            border-color: #2a2f33 !important;
        }
        .badge {
            color: #ffffff !important;
        }
        
        .table td {
            vertical-align: middle;
        }
        
        .badge {
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }
        
        .btn {
            border-radius: 50px;
        }
        
        .btn-sm {
            padding: 0.4rem 0.8rem;
            font-size: 0.75rem;
            border-radius: 50px;
        }
        
        .btn-edit {
            background-color: #000000;
            color: #ffffff !important;
            border: 1px solid #ffffff;
            border-radius: 25px;
            padding: 0.4rem 1rem;
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            cursor: pointer;
        }
        
        .btn-edit:hover, .btn-edit:focus {
            background-color: #ffffff !important;
            color: #000000 !important;
            border-color: #000000;
            text-decoration: none;
        }
        
        .btn-group .btn {
            margin-right: 0.25rem;
        }
        
        .btn-group .btn:last-child {
            margin-right: 0;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json'
                },
                responsive: true,
                order: [[1, 'asc']],
                pageLength: 10,
                lengthMenu: [10, 25, 50, 100]
            });
        });
    </script>
}
