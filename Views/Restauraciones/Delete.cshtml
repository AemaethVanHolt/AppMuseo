@model AppMuseo.Models.Obra

@{
    ViewData["Title"] = "Eliminar Obra en Restauración";
    ViewData["ActivePage"] = "Restauraciones";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>¡Atención!</h5>
                        <p class="mb-0">Está a punto de eliminar permanentemente esta obra del sistema. Esta acción no se puede deshacer.</p>
                    </div>
                    
                    <h5 class="mb-3">Detalles de la Obra</h5>
                    
                    <div class="row mb-4">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Titulo" />
                            }
                            else
                            {
                                <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 200px; border-radius: 5px;">
                                    <i class="fas fa-image fa-4x text-light-50"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Título:</dt>
                                <dd class="col-sm-8">@Model.Titulo</dd>
                                
                                <dt class="col-sm-4">Autor:</dt>
                                <dd class="col-sm-8">@(Model.Autor ?? "No especificado")</dd>
                                
                                <dt class="col-sm-4">Año:</dt>
                                <dd class="col-sm-8">@Model.Anio</dd>
                                
                                <dt class="col-sm-4">Colección:</dt>
                                <dd class="col-sm-8">@(Model.Coleccion?.Nombre ?? "Sin colección")</dd>
                                
                                <dt class="col-sm-4">Ubicación:</dt>
                                <dd class="col-sm-8">@(Model.UbicacionActual ?? "No especificada")</dd>
                                
                                <dt class="col-sm-4">Estado:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-warning">En Restauración</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="alert alert-danger">
                        <h6 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>¿Está seguro que desea continuar?</h6>
                        <p class="mb-0">Esta acción eliminará permanentemente la obra del sistema. No podrá recuperar esta información.</p>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Volver al listado
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-1"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
